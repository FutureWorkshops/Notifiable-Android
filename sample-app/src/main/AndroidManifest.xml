<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.futureworkshops.notifiable.sample">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.futureworkshops.notifiable.sample.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="om.futureworkshops.notifiable.sample.permission.C2D_MESSAGE" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name=".presentation.SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Notifiable.DayNight"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="allowBackup">

        <activity
            android:name=".presentation.splashscreen.SplashscreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Notifiable.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NotifiableActivity"
            android:launchMode="singleTask" />


        <service android:name="com.futureworkshops.notifiable.sample.presentation.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>