<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/splash_slide_transition"
        app:constraintSetEnd="@id/cs_splash__slide_in_finish"
        app:constraintSetStart="@id/cs_splash_slide_in_start"
        app:duration="1000"

        >

        <KeyFrameSet>

            <KeyPosition
                app:keyPositionType="deltaRelative"
                app:transitionEasing="decelerate"
                app:framePosition="50"
                app:motionTarget="@id/state_card"
                app:percentY="0.2"
                app:percentX="0.2" />

            <KeyPosition
                app:keyPositionType="deltaRelative"
                app:framePosition="40"
                app:motionTarget="@id/app_bar"
                app:percentY="1"
                app:sizePercent="1" />

            <KeyPosition
                app:keyPositionType="deltaRelative"
                app:framePosition="40"
                app:motionTarget="@id/app_logo"
                app:sizePercent="1"
                app:percentY="1"
                app:percentX="1" />

            <KeyAttribute
                app:framePosition="40"
                app:motionTarget="@id/app_logo"

                />

            <KeyPosition
                app:keyPositionType="deltaRelative"
                app:framePosition="40"
                app:motionTarget="@id/version_tv"
                app:percentY="1"
                app:percentX="1" />

        </KeyFrameSet>

    </Transition>


    <ConstraintSet android:id="@+id/cs_splash_slide_in_start">

        <Constraint
            android:id="@id/app_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/app_window_background"
            android:translationZ="@dimen/default_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/app_logo"
            android:layout_width="@dimen/ic_splash_logo_size"
            android:layout_height="@dimen/ic_splash_logo_size"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/app_name"
            android:translationZ="@dimen/default_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo_light" />

        <Constraint
            android:id="@id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Constraint
            android:id="@id/state_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/version_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/cs_splash__slide_in_finish"
        app:transitionEasing="standard">
        <Constraint
            android:id="@id/app_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_app_bar"
            android:translationZ="@dimen/default_elevation"
            app:layout_constraintBottom_toBottomOf="@id/app_bar_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/app_logo"
            android:layout_width="@dimen/ic_logo_demo_size"
            android:layout_height="@dimen/ic_logo_demo_size"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_logo_light"
            android:translationZ="@dimen/default_elevation"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/app_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/app_bar"
            app:layout_constraintVertical_bias="0.7" />

        <Constraint
            android:id="@id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Constraint
            android:id="@id/state_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/version_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            app:layout_constraintVertical_bias="0.0" />


    </ConstraintSet>


</MotionScene>